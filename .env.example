APP_NAME=Mevrik-Laravel-Assessment
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mevrik_assessment
DB_USERNAME=root
DB_PASSWORD=

# Queue and Cache Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue Worker Configuration
QUEUE_WORKER_MEMORY=128
QUEUE_WORKER_TIMEOUT=90
QUEUE_WORKER_TRIES=3
QUEUE_WORKER_BACKOFF=10

# Redis Configuration (optional - use if QUEUE_CONNECTION=redis)
MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis
REDIS_QUEUE=default
REDIS_QUEUE_DB=2
REDIS_CACHE_DB=1

# Rate Limiting Configuration
RATE_LIMIT_TIER_FREE=10
RATE_LIMIT_TIER_PREMIUM=50
RATE_LIMIT_TIER_ENTERPRISE=200
RATE_LIMIT_DEFAULT_TIER=free

# File Processing Configuration
FILE_MAX_SIZE=10485760
FILE_ALLOWED_EXTENSIONS=txt,csv,json,xml,pdf,jpg,jpeg,png
FILE_PROCESSING_TIMEOUT=300
FILE_RETENTION_DAYS=30
FILE_RETENTION_DAYS_ARCHIVE=90

# Storage Configuration
STORAGE_CLEANUP_ENABLED=true
STORAGE_CLEANUP_DAYS=30
STORAGE_CLEANUP_TIME=02:00

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
